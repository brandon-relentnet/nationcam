# ── App Database ─────────────────────────────────────────────
POSTGRES_DB=nationcam
POSTGRES_USER=nationcam
POSTGRES_PASSWORD=change_me_in_production

# ── Logto Database ──────────────────────────────────────────
LOGTO_DB_PASSWORD=change_me_logto_db_password

# ── Logto Auth ──────────────────────────────────────────────
# Public-facing Logto URL (where users are redirected for login)
LOGTO_ENDPOINT=https://auth.nationcam.com
# Logto admin console URL
LOGTO_ADMIN_ENDPOINT=https://auth-admin.nationcam.com
# Logto application ID (created in Logto admin console)
LOGTO_APP_ID=your_logto_app_id
# API resource identifier registered in Logto
LOGTO_API_RESOURCE=https://api.nationcam.com

# ── Logto Ports (local dev) ─────────────────────────────────
LOGTO_PORT=3301
LOGTO_ADMIN_PORT=3302

# ── CORS ────────────────────────────────────────────────────
CORS_ORIGINS=https://nationcam.com

# ── Host Ports ──────────────────────────────────────────────
APP_PORT=3000
